@using EdgeCut.Core.Models
@model List<Blog>

    @{
        int counter = 1;
    }

<div class="container">
    <div class="row">
        <div class="col-3">
            <a asp-action="Create" asp-controller="Blog" class="btn btn-outline-primary">Create Blog</a>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th> 
                        <th scope="col">Title</th>
                        <th scope="col">Decription</th>
                        <th scope="col">RedirectUrl</th>
                        <th scope="col">Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th scope="row">@(counter++)</th>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.RedirectUrl</td>
                            <td><img src="~/uploads/sliders/@item.ImageUrl" height="100"/></td>
                            <td>
                                <a asp-action="Update" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                <a asp-action="Delete" asp-controller="Blog" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
